#include <string.h>

#include <stdio.h>
#include <stdlib.h>
void grafico()
{
char a,b,c,d,e,f,g,h,i,j;
 a = b = c = d = e = f = g = h = i = j = "  ";
  printf("%c | %c | %c", a, b, c);
  printf("\n------------\n");
  printf("%c | %c | %c", d, e, f);
  printf("\n------------\n");
  printf("\n%c | %c | %c", g, h,i);
  return;
}
void main()
{
char a,b,c,d,e,f,g,h,i,j,jogada;
int t,p,q, matriz[3][3];
 a = b = c = d = e = f = g = h = i = j = "  ";
    printf("iniciando o jogo...\n");
    printf(" em qual linha fara a jogada?\n"); scanf("%i", &t);
    printf("\nem qual coluna fara a jogada?"); scanf("%i", &p);
    printf("\nfaca sua jogada player 1: X ou O?\n");
    scanf("%c", &jogada);
    if(t == 1 && p == 1){
        jogada == a;
    }
    else if(t == 1 && p == 2){
        jogada == b;
    }
    else if(t == 1 && p == 3){
        jogada == c;
    }
    else if(t == 2 && p == 1){
        jogada == d;
    }
    else if(t == 2 && p == 2){
        jogada == e;
    }
    else if(t == 2 && p == 3){
        jogada == f;
    }
    else if(t == 3 && p == 1){
        jogada == g;
    }
    else if(t == 3 && p == 2){
        jogada == h;
    }
    else if(t == 3 && p == 3){
        i == jogada;
    }
    else{
        printf("jogada invalida");
    }
    grafico();


}

