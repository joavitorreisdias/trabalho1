#include <stdio.h>

#include <string.h>

void main()
{
char matriz[3][3];

char jogada;
int i,j,a,b,c, jogada1;
    for( a=0; a< 3; a++){
        for(b=0; b< 3; b++){
          matriz[a][b] = "b";
            
        }
    }
    printf("iniciando o jogo...\n");
    printf(" em qual linha fará a jogada?\n"); scanf("%i", &i);
    printf("\nem qual coluna fará a jogada?"); scanf("%i", &j);
    printf("\nfaça sua jogada player 1: X ou O?\n"); scanf("%c",&matriz[i][j]);
    
    for( a=0; a< 3; a++){
        for(b=0; b< 3; b++){
          printf("%c", matriz[a][b]);
        }
        printf("\n");
    }
    
}
